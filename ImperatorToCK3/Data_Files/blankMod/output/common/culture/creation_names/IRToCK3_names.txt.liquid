pmpese = { # Carthaginian divergence in Sardinia, name based on PMP tag from Imperator
	# https://imperator.paradoxwikis.com/Countries#:~:text=P%27mpe-,PMP,-Magna%20Graecia
	trigger = {
		capital_county = {
			title:d_sardinia = {
				is_de_jure_liege_or_above_target = prev
			}
		}
		any_sub_realm_county = {
			OR = {
				{% if tfe %}
				# TFE has punic culture instead of carthaginian.
				culture = culture:punic
				culture = { any_parent_culture_or_above = { this = culture:punic } }
				{% else %}
				culture = culture:carthaginian
				culture = { any_parent_culture_or_above = { this = culture:carthaginian } }
				{% endif %}
			}

			duchy = title:d_sardinia
		}
		
		OR = {
			{% if tfe %}
			culture = culture:punic
			culture = { any_parent_culture_or_above = { this = culture:punic } }
			{% else %}
			culture = culture:carthaginian
			culture = { any_parent_culture_or_above = { this = culture:carthaginian } }
			{% endif %}
		}
	}
}

